{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/preload",
    "rootDir": "./src/preload",
    "types": ["node", "electron"]
  },
  "include": ["src/preload/**/*"],
  "exclude": ["node_modules", "dist"]
}
